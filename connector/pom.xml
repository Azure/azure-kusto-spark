                                <relocation>
                                    <pattern>org.apache.common</pattern>
                                    <shadedPattern>${kusto.shade.prefix}.org.apache.common</shadedPattern>
                                </relocation>
                                <!-- IO -->
                                <relocation>
                                    <pattern>io.vavr</pattern>
